@model FluxoCaixa.Models.ContaFinanceira

@{
	ViewData["Title"] = "Edit";
}

<h1 class="text-dark text-center">Editar<spam class="fw-bold"> Tipo da Conta</spam></h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ContaFinanceiraId" />
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Saldo" class="control-label"></label>
				<input asp-for="Saldo" class="form-control" />
				<span asp-validation-for="Saldo" class="text-danger"></span>
			</div>
			<div class="row gap-3 mt-3 mb-3">
				<div class="col-12 d-flex justify-content-between">
					<div>
						<a asp-action="Index" class="btn btn-danger">Voltar para a Lista</a>
					</div>
					<div class="form-group">
						<input type="submit" value="Salvar" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
