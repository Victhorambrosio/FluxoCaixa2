@model FluxoCaixa.Models.Fluxo

@{
	ViewData["Title"] = "Create";
	var alerta = ViewData["Alerta"] as String;
}

<h1 class="text-dark text-center">Adicionar<span class="fw-bold"> Fluxo</span></h1>

@if (!String.IsNullOrEmpty(alerta))
{
	<div class="alert alert-warning mb-3">
		@alerta
	</div>
}

<h4>Fluxo</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input type="hidden" asp-for="DataMovimentacao" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ContaFinanceiraId" class="control-label"></label>
				<select asp-for="ContaFinanceiraId" class="form-control" asp-items="ViewBag.ContaFinanceiraId"></select>
			</div>
			<div class="form-group">
				<label asp-for="ContaId" class="control-label"></label>
				<select asp-for="ContaId" class="form-control" asp-items="ViewBag.ContaId"></select>
			</div>
			<div class="form-group">
				<input type="hidden" asp-for="UsuarioId" class="form-control" />
			</div>
			<div class="row gap-3 mt-3 mb-3">
				<div class="col-12 d-flex justify-content-between">
					<div>
						<a asp-action="Index" class="btn btn-danger">Cancelar</a>
					</div>

					<div class="form-group">
						<input type="submit" value="Criar" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
