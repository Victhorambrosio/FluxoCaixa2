@model FluxoCaixa.Models.Fluxo

@{
	ViewData["Title"] = "Edit";
}

<h1 class="text-dark text-center">Editar<spam class="fw-bold"> Tipo da Conta</spam></h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="FluxoId" />
			<div class="form-group">
				<label asp-for="DataMovimentacao" class="control-label"></label>
				<input asp-for="DataMovimentacao" class="form-control" />
				<span asp-validation-for="DataMovimentacao" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ContaFinanceiraId" class="control-label"></label>
				<select asp-for="ContaFinanceiraId" class="form-control" asp-items="ViewBag.ContaFinanceiraId"></select>
				<span asp-validation-for="ContaFinanceiraId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ContaId" class="control-label"></label>
				<select asp-for="ContaId" class="form-control" asp-items="ViewBag.ContaId"></select>
				<span asp-validation-for="ContaId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="UsuarioId" class="control-label"></label>
				<select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
				<span asp-validation-for="UsuarioId" class="text-danger"></span>
			</div>
			<div class="row gap-3 mt-3 mb-3">
				<div class="col-12 d-flex justify-content-between">
					<div>
						<a asp-action="Index" class="btn btn-danger">Voltar para a Lista</a>
					</div>
					<div class="form-group">
						<input type="submit" value="Salvar" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
